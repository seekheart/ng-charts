{
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true,
    "flatModuleOutFile": "ngz-charts.js",
    "flatModuleId": "ngz-charts",
    "annotateForClosureCompiler": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./release",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "es2015",
    "target": "es5",

    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "files": [
    "./src/lib/index.ts"
  ]
}
